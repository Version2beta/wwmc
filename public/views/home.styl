
.skill {
  absolute: top left
  background: #e6ecf0
  border: 1px solid #87AFC7
  border-radius: 2px
  color: black
  overflow: hidden
  padding: 6px
  text-decoration: none
  text-overflow: ellipsis
  whitespace: nowrap

  &:active, &:focus {
    border-color: #7793A8
  }
}

.skill:hover {
  box-shadow: 0px 0px 20px #fff
  text-decoration: none
}

.dependency {
  box-shadow: 0 0 20px gold
}

