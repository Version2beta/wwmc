
timelineHeight = 50px

.topBar {
  background: black
  color: white
  fixed: top left
  height: 40px
  padding: 6px
  width: 100%

  .nkoVote {
    float: right
  }
}

.home {
  box-sizing: content-box
  padding-bottom: timelineHeight
  position: relative
}

.category {
  top: 40px
  position: relative

  .categoryText {
    absolute: top 260px left
    color: white
    display: block
    font-size: 30px
    text-align: right
    transform: rotate(-90deg)
    transform-origin: top left
    width: 250px
  }

  &:first-of-type .categoryText {
    top: 260px
  }
}

.hide-dependencies .skill-container {
  background: rgba(255, 255, 255, 0.3)
}

.skill-container, .exploreChart {
  absolute: top left
  background: rgba(255, 255, 255, 0.6)
  border: 1px solid rgba(0, 0, 0, 0.3)
  border-radius: 2px
  color: black
  overflow: hidden
  padding: 6px

  &:hover, &.active {
    box-shadow: 0px 0px 40px white
    border-color: #7793A8
    text-decoration: none
    background: rgba(255, 255, 255, 0.9)
  }

  & p.description {
    margin-top: 16px
    width: 440px
  }

  &.detail {
    width: 480px !important
    height: 240px !important
    background: rgba(255, 255, 255, 0.9) !important
    z-index: 100
    transition width 300ms, height 300ms

    p.detail-close {
      display: block
    }
  }

  p.detail-close {
    background-color: #b00
    color: white
    display: none
    padding: 0 5px
    font-size: 0.8em
    margin: 0
    position: absolute
    top: 2px
    left: 458px
    &:hover {
      cursor: pointer
    }
  }

  &.dependency {
    box-shadow: 0 0 20px white
    background: rgba(255, 255, 255, 0.75)
  }
}


.skill {
  text-decoration: none
  text-overflow: ellipsis
  whitespace: nowrap
  display: block
  width: 80%
  height: auto

  &:hover, &.active {
    text-decoration: none
  }
}

.timeline {
  color: white
  background: #2B2B2B
  absolute: bottom left
  height: timelineHeight
  position: fixed
  width: 100%
}

.timelineNotch {
  absolute: bottom left
  background: rgba(255, 255, 255, 0.75)
  height: 20px
  width: 2px
}

.year {
  absolute: bottom left
  background: rgba(255, 255, 255, 0.75)
  height: 100%
  width: 4px

  margin-left: -(@width / 2)
}


.welcome {
  fixed: top left
  background: rgba(239,186,143, 1)
  height: 100%
  width: 100%

  .content {
    absolute: left 50% top
    background: #F8F8F8
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4)
    height: 100%
    line-height: 1.4em
    padding: 6px 36px
    text-align: center
    width: 420px

    margin-left: -(@width / 2)
  }

  .exploreChart {
    position: static
    border-radius: 3px
  }
}
