
timelineHeight = 50px

.home {
  box-sizing: content-box
  padding-bottom: timelineHeight
  position: relative
}

.category {
  padding: 6px 0
  position: relative

  .categoryText {
    absolute: top 260px left
    color: white
    display: block
    font-size: 30px
    text-align: right
    transform: rotate(-90deg)
    transform-origin: top left
    width: 250px
  }
}

.skill {
  absolute: top left
  background: rgba(255, 255, 255, 0.6)
  border: 1px solid rgba(0, 0, 0, 0.3)
  border-radius: 2px
  color: black
  overflow: hidden
  padding: 6px
  text-decoration: none
  text-overflow: ellipsis
  whitespace: nowrap

  &:hover, &.active {
    box-shadow: 0px 0px 40px white
    border-color: #7793A8
    text-decoration: none
    background: rgba(255, 255, 255, 0.9)
  }

  &.dependency {
    box-shadow: 0 0 20px white
    background: rgba(255, 255, 255, 0.75)
  }

  &.hide-dependency {
    background: rgba(255, 255, 255, 0.3)
  }
}

.timeline {
  color: white
  background: #2B2B2B
  absolute: bottom left
  height: timelineHeight
  position: fixed
  width: 100%
}

.timelineNotch {
  absolute: bottom left
  background: rgba(255, 255, 255, 0.75)
  height: 20px
  width: 2px
}

.year {
  absolute: bottom left
  background: rgba(255, 255, 255, 0.75)
  height: 100%
  width: 4px

  margin-left: -(@width / 2)
}

