
timelineHeight = 50px

.home {
  box-sizing: content-box
  padding-bottom: timelineHeight + 10
  position: relative

}

.skill {
  absolute: top left
  background: rgba(230, 236, 240, 0.6)
  border: 1px solid #87AFC7
  border-radius: 2px
  color: black
  overflow: hidden
  padding: 6px
  text-decoration: none
  text-overflow: ellipsis
  whitespace: nowrap

  &:active, &:focus {
    border-color: #7793A8
  }

  &:hover {
    box-shadow: 0px 0px 20px #fff
    text-decoration: none
  }
}

.dependency {
  box-shadow: 0 0 20px gold
}


.timeline {
  color: white
  background: #2B2B2B
  absolute: bottom left
  height: timelineHeight
  position: fixed
  width: 100%
}

.timelineNotch {
  absolute: bottom left
  background: white
  height: 20px
  width: 2px
}

.year {
  absolute: bottom left
  background: white
  height: 100%
  width: 4px

  margin-left: -(@width / 2)
}

